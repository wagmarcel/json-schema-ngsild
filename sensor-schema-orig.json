[
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "sensor/v0.1/sensor",
        "title": "Sensor",
        "description": "Sensor template for IFF",
        "type": "object",
        "group": "Sensor",
        "metadata": {
            "type": "sensor"
        },
        "properties": {
            "metadata": {
                "type": "object",
                "title": "Identification",
                "$ref": "sensor/v0.1/sensor-metadata.json"
            },
            "parameters": {
                "type": "object",
                "title": "Parameters",
                "$ref": "sensor/v0.1/sensor-parameter.json"
            }
        }
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "sensor/v0.1/sensor-metadata",
        "title": "IFF template for sensor metadata",
        "description": "Sensor template for IFF",
        "type": "object",
        "properties": {
            "ifric_identification": {
                "title": "Ifric Data",
                "$ref": "base-objects/v0.1/ifric-identification.json"
            },
            "machine_identification": {
                "title": "Machine Identification Data",
                "$ref": "base-objects/v0.1/machine-identification.json"
            }
        }
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "base-objects/v0.1/ifric-identification",
        "title": "Ifric Identification",
        "description": "Asset details related to IFRIC.",
        "type": "object",
        "visible": true,
        "properties": {
            "asset_manufacturer_name": {
                "id": "base-objects-v0.1-ifric-identification-asset-manufacturer-name",
                "type": "string",
                "title": "Asset manufacturer name",
                "placeholder": "Auto fill from ICID",
                "description": "The manufacturer name is generated after the manufacturer registration",
                "readOnly": false,
                "visible": true
            },
            "urn_id": {
                "id": "base-objects-v0.1-ifric-identification-urn-id",
                "type": "string",
                "title": "URN-ID",
                "placeholder": "Auto fill from PDT",
                "description": "Automatically generated by PDT (Auto Fill from PDT)",
                "readOnly": false,
                "visible": true
            },
            "ifric_id_manufacturer": {
                "id": "base-objects-v0.1-ifric-identification-ifric-id-manufacturer",
                "type": "string",
                "title": "IFRIC-ID of manufacturer",
                "placeholder": "Auto fill from ICID",
                "description": "ID is generated after manufacturer registration from ICID",
                "readOnly": false,
                "visible": true
            },
            "ifric_id_asset": {
                "id": "base-objects-v0.1-ifric-identification-ifric-id-asset",
                "type": "string",
                "title": "IFRIC-ID of asset",
                "placeholder": "Auto fill from ICID",
                "description": "Globally unique identifiable ID generated by ICID",
                "readOnly": false,
                "visible": true
            },
            "asset_category": {
                "id": "base-objects-v0.1-ifric-identification-asset-category",
                "type": "array",
                "title": "Assetkategorie und ECLASS IRDI",
                "placeholder": "Auto fill from default",
                "description": "Assetkategorie und ECLASS IRDI",
                "default": [
                    "36 Machine, apparatus",
                    "0173-1#01-AAD302#007"
                ],
                "readOnly": false,
                "visible": true
            },
            "logo_manufacturer": {
                "id": "base-objects-v0.1-ifric-identification-logo-manufacturer",
                "type": "object",
                "title": "Logo Manufacturer",
                "contentEncoding": "base64",
                "contentMediaType": "image/png",
                "placeholder": "Auto fill from ICID",
                "description": "Link for logo of the manufacturer",
                "readOnly": false,
                "visible": true
            }
        },
        "required": [
            "asset_manufacturer_name",
            "urn_id",
            "ifric_id_manufacturer",
            "ifric_id_asset",
            "asset_category"
        ]
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "base-objects/v0.1/machine-identification",
        "title": "Machine Identification",
        "description": "A machine can identify with this object itself.",
        "type": "object",
        "visible": true,
        "properties": {
            "alias": {
                "id": "base-objects-v0.1-machine-identification-alias",
                "type": "string",
                "title": "Alias of the asset",
                "placeholder": "Enter an alias for the asset",
                "description": "Alternate name of the asset",
                "readOnly": false,
                "visible": true
            },
            "product_name": {
                "id": "base-objects-v0.1-machine-identification-product-name",
                "type": "string",
                "title": "Manufacturer's product name",
                "placeholder": "Enter the product name",
                "description": "Name of the asset from the manufacturer",
                "readOnly": false,
                "visible": true
            },
            "asset_serial_number": {
                "id": "base-objects-v0.1-machine-identification-asset-serial-number",
                "type": "string",
                "title": "Serial number",
                "placeholder": "Enter the serial number",
                "description": "Serial number of asset",
                "readOnly": false,
                "visible": true
            },
            "product_icon": {
                "id": "base-objects-v0.1-machine-identification-product-icon",
                "type": "object",
                "title": "Product Icon",
                "contentEncoding": "base64",
                "contentMediaType": "image/png",
                "placeholder": "Upload a product icon",
                "description": "The production icon of the asset",
                "readOnly": false,
                "visible": true
            },
            "manufacturing_year": {
                "id": "base-objects-v0.1-machine-identification-manufacturing-year",
                "type": "number",
                "unit": "year",
                "title": "Year of manufacturing",
                "description": "The manufacturer year of the asset",
                "placeholder": "Enter the manufacturing year in YYYY format",
                "readOnly": false,
                "visible": true
            },
            "documentation": {
                "id": "base-objects-v0.1-machine-identification-documentation",
                "type": "object",
                "title": "Manual",
                "contentEncoding": "base64",
                "contentMediaType": "application/pdf",
                "description": "The legally required documentation for the machine",
                "placeholder": "Upload the documentation in pdf format",
                "readOnly": false,
                "visible": true
            },
            "asset_communication_protocol": {
                "id": "base-objects-v0.1-machine-identification-asset-communication-protocol",
                "type": "array",
                "title": "Communication protocol",
                "description": "The communication protocol of the asset",
                "placeholder": "Select a protocol",
                "enum": [
                    "opc-ua",
                    "mqtt",
                    "modbus",
                    "http"
                ],
                "readOnly": false,
                "visible": true
            },
            "ce_marking": {
                "id": "base-objects-v0.1-machine-identification-ce-marking",
                "type": "object",
                "title": "CE-Marking",
                "description": "The ce-marking of the asset",
                "contentEncoding": "base64",
                "contentMediaType": "application/pdf",
                "placeholder": "Upload ce-marking documentation in pdf format",
                "readOnly": false,
                "visible": true
            }
        },
        "required": [
            "product_name",
            "manufacturing_year",
            "asset_communication_protocol",
            "ce_marking",
            "documentation",
            "asset_serial_number"
        ]
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "sensor/v0.1/sensor-parameter",
        "title": "Sensor parameter",
        "description": "Sensor parameter",
        "type": "object",
        "properties": {
            "operation_conditions": {
                "title": "Operation Conditions",
                "$ref": "base-objects/v0.1/operation-conditions.json"
            },
            "operation_conditions_runtime": {
                "title": "Operation Conditions Runtime",
                "$ref": "base-objects/v0.1/operation-conditions-runtime.json"
            },
            "power_supply": {
                "title": "Power Supply",
                "$ref": "base-objects/v0.1/power-supply.json"
            },
            "power_supply_runtime": {
                "title": "Power Supply",
                "$ref": "base-objects/v0.1/power-supply-runtime.json"
            }
        }
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "base-objects/v0.1/operation-conditions",
        "title": "Operation conditions",
        "description": "IFF base object for operating conditions of a machine",
        "type": "object",
        "visible": true,
        "properties": {
            "ambient_operating_temperature_min": {
                "id": "base-objects-v0.1-operation-conditions-ambient-operating-temperature-min",
                "type": "number",
                "title": "Ambient operating temperature (min.)",
                "description": "The min temperature in °C",
                "unit": "°C",
                "placeholder": "Enter the min temperature in °C",
                "readOnly": false,
                "visible": true
            },
            "ambient_operating_temperature_max": {
                "id": "base-objects-v0.1-operation-conditions-ambient-operating-temperature-max",
                "type": "number",
                "title": "Ambient operating temperature (max.)",
                "description": "The max temperature in °C",
                "unit": "°C",
                "placeholder": "Enter the max temperature in °C",
                "readOnly": false,
                "visible": true
            },
            "relative_humidity_min": {
                "id": "base-objects-v0.1-operation-conditions-relative-humidity-min",
                "type": "number",
                "title": "Relative humidity (min.)",
                "description": "The min humidity in percentage",
                "unit": "%",
                "placeholder": "Enter the min humidity in percentage",
                "readOnly": false,
                "visible": true
            },
            "relative_humidity_max": {
                "id": "base-objects-v0.1-operation-conditions-relative-humidity-max",
                "type": "number",
                "title": "Relative humidity (max.)",
                "description": "The max humidity in percentage",
                "unit": "%",
                "placeholder": "Enter the max humidity in percentage",
                "readOnly": false,
                "visible": true
            },
            "atmospheric_pressure_min": {
                "id": "base-objects-v0.1-operation-conditions-atmospheric-pressure-min",
                "type": "number",
                "title": "Atmospheric pressure (min.)",
                "description": "The min pressure in mbar",
                "unit": "mbar",
                "placeholder": "Enter the min pressure in mbar",
                "readOnly": false,
                "visible": true
            },
            "atmospheric_pressure_max": {
                "id": "base-objects-v0.1-operation-conditions-atmospheric-pressure-max",
                "type": "number",
                "title": "Atmospheric pressure (max.)",
                "description": "the max pressure in mbar",
                "unit": "mbar",
                "placeholder": "Enter the max pressure in mbar",
                "readOnly": false,
                "visible": true
            },
            "dustiness_max": {
                "id": "base-objects-v0.1-operation-conditions-dustiness-max",
                "type": "number",
                "title": "Dust Density (max.)",
                "description": "The max dust density in mg/m³",
                "unit": "mg/m³",
                "placeholder": "Enter the max dust density in mg/m³",
                "readOnly": false,
                "visible": true
            }
        },
        "required": [
            "ambient_operating_temperature_min",
            "ambient_operating_temperature_max",
            "relative_humidity_min",
            "relative_humidity_max",
            "atmospheric_pressure_min",
            "atmospheric_pressure_max"
        ]
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "base-objects/v0.1/operation-conditions-runtime",
        "title": "Operations Conditions",
        "description": "Operations Conditions Runtime",
        "type": "object",
        "visible": false,
        "properties": {
            "machine_state": {
                "id": "base-objects-v0.1-operation-conditions-runtime-machine-state",
                "type": "array",
                "title": "Machine Status",
                "description": "Current status of the machine (Online_Idle, Run, Online_Error, Online_Maintenance, Setup, Testing)",
                "default": [
                    "Online_Idle",
                    "Run",
                    "Online_Error",
                    "Online_Maintenance",
                    "Setup",
                    "Testing"
                ],
                "readOnly": false,
                "visible": false
            },
            "machine_state_from_smartbox": {
                "id": "base-objects-v0.1-operation-conditions-runtime-machine-state-from-smartbox",
                "type": "array",
                "title": "Machine Status from Smartbox",
                "description": "Current status of the machine according to smartbox (Offline_Idle, Offline_Error, Offline_Maintenance)",
                "default": [
                    "Offline_Idle",
                    "Offline_Error",
                    "Offline_Maintenance"
                ],
                "readOnly": false,
                "visible": false
            },
            "ambient_operating_temperature": {
                "id": "base-objects-v0.1-operation-conditions-runtime-ambient-operating-temperature",
                "type": "number",
                "title": "Ambient operating temperature",
                "description": "Temperature in °C",
                "unit": "°C",
                "readOnly": false,
                "visible": false
            },
            "relative_humidity": {
                "id": "base-objects-v0.1-operation-conditions-runtime-relative-humidity",
                "type": "number",
                "title": "Relative humidity",
                "description": "Humidity in percentage",
                "unit": "%",
                "readOnly": false,
                "visible": false
            },
            "atmospheric_pressure": {
                "id": "base-objects-v0.1-operation-conditions-runtime-atmospheric-pressure",
                "type": "number",
                "title": "Atmospheric pressure",
                "description": "Pressure in mbar",
                "unit": "mbar",
                "readOnly": false,
                "visible": false
            },
            "dustiness": {
                "id": "base-objects-v0.1-operation-conditions-runtime-dustiness",
                "type": "number",
                "title": "Dust Density",
                "description": "Dust density in mg/m³",
                "unit": "mg/m³",
                "readOnly": false,
                "visible": false
            }
        },
        "required": [
            "machine_state",
            "machine_state_from_smartbox"
        ]
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "base-objects/v0.1/power-supply",
        "title": "Power",
        "description": "IFF base object for power of a machine",
        "type": "object",
        "visible": true,
        "properties": {
            "supply_voltage": {
                "id": "base-objects-v0.1-power-supply-voltage",
                "type": "number",
                "title": "Supply voltage",
                "description": "Supply voltage",
                "unit": "V",
                "placeholder": "Enter supply voltage",
                "readOnly": false,
                "visible": true
            },
            "frequency": {
                "id": "base-objects-v0.1-power-frequency",
                "type": "number",
                "title": "Frequency",
                "description": "Frequency",
                "unit": "Hz",
                "placeholder": "Enter frequency",
                "readOnly": false,
                "visible": true
            },
            "voltage_type": {
                "id": "base-objects-v0.1-power-voltage-type",
                "type": "array",
                "title": "Voltage type",
                "description": "Voltage type",
                "placeholder": "Enter Voltage type",
                "enum": [
                    "AC",
                    "DC",
                    "3-phase AC"
                ],
                "readOnly": false,
                "visible": true
            },
            "electric_power": {
                "id": "base-objects-v0.1-power-electric-power",
                "type": "number",
                "title": "Electrical Power",
                "description": "Electrical Power",
                "unit": "W",
                "placeholder": "Enter electrical power",
                "readOnly": false,
                "visible": true
            }
        },
        "required": [
            "supply_voltage",
            "frequency",
            "voltage_type",
            "electric_power"
        ]
    },
    {
        "$schema": "http://json-schema.org/schema#",
        "$schemaVersion": "0.0.1",
        "$id": "base-objects/v0.1/power-supply-runtime",
        "title": "Power",
        "description": "IFF base object for power supply at runtime of a machine",
        "type": "object",
        "visible": false,
        "properties": {
            "supply_voltage_l1": {
                "id": "base-objects-v0.1-power-supply-runtime-supply-voltage-l1",
                "type": "number",
                "title": "Supply Voltage L1",
                "description": "Conductor voltage between N (neutral) and L1",
                "unit": "V",
                "readOnly": false,
                "visible": false
            },
            "supply_voltage_l2": {
                "id": "base-objects-v0.1-power-supply-runtime-supply-voltage-l2",
                "type": "number",
                "title": "Supply Voltage L2",
                "description": "Conductor voltage between N (neutral) and L2",
                "unit": "V",
                "readOnly": false,
                "visible": false
            },
            "supply_voltage_l3": {
                "id": "base-objects-v0.1-power-supply-runtime-supply-voltage-l3",
                "type": "number",
                "title": "Supply Voltage L3",
                "description": "Conductor voltage between N (neutral) and L3",
                "unit": "V",
                "readOnly": false,
                "visible": false
            },
            "current_strength_l1": {
                "id": "base-objects-v0.1-power-supply-runtime-current-strength-l1",
                "type": "number",
                "title": "Current Strength L1",
                "description": "Current measurement at L1",
                "unit": "A",
                "readOnly": false,
                "visible": false
            },
            "current_strength_l2": {
                "id": "base-objects-v0.1-power-supply-runtime-current-strength-l2",
                "type": "number",
                "title": "Current Strength L2",
                "description": "Current measurement at L2",
                "unit": "A",
                "readOnly": false,
                "visible": false
            },
            "current_strength_l3": {
                "id": "base-objects-v0.1-power-supply-runtime-current-strength-l3",
                "type": "number",
                "title": "Current Strength L3",
                "description": "Current measurement at L3",
                "unit": "A",
                "readOnly": false,
                "visible": false
            },
            "electric_power": {
                "id": "base-objects-v0.1-power-supply-runtime-electric-power",
                "type": "number",
                "title": "Electric Power",
                "description": "Electrical power",
                "unit": "W",
                "readOnly": false,
                "visible": false
            }
        }
    }
]